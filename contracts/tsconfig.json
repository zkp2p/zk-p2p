{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["utils/*"],
      "@typechain/*": ["typechain/*"]
    }
  },
  "include": [
    "index.ts",
    "./test/**/*.ts",
    "./utils/**/*.ts",
    "./typechain/**/*.ts",
  ],
  "files": [
    "hardhat.config.ts",
  ]
}
